{# templates/reset_password_form.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Réinitialisation du mot de passe</title>
</head>
<body>
    <h1>Réinitialisation du mot de passe</h1>

    {# Afficher les éventuelles erreurs #}
    {% if app.session.flashBag.has('error') %}
        <div style="color: red;">
            {{ app.session.flashBag.get('error')|first }}
        </div>
    {% endif %}

    {# Afficher les éventuels messages de succès #}
    {% if app.session.flashBag.has('success') %}
        <div style="color: green;">
            {{ app.session.flashBag.get('success')|first }}
        </div>
    {% endif %}

    <form action="{{ path('reset_password') }}" method="post">
        <input type="hidden" name="token" value="{{ resetToken }}">
        
        <label for="password">Nouveau mot de passe:</label>
        <input type="password" id="password" name="password" required>
        
        <button type="submit">Réinitialiser le mot de passe</button>
    </form>
</body>
</html>
